{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "commonjs": true
  },
  "settings": {
    "ecmascript": 6,
    "jsx": true
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 8,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "impliedStrict": true,
      "classes": true
    }
  },
  "extends": ["airbnb", "airbnb/hooks", "prettier", "prettier/react"],
  "plugins": ["prettier"],
  "rules": {
    "comma-dangle": 0,
    "react/jsx-filename-extension": 0,
    "react/jsx-sort-props": 1,
    "react/prop-types": [2, { "ignore": ["match"] }],
    "react/prefer-stateless-function": 0,
    "react/jsx-props-no-spreading": 0,
    "no-unused-expressions": [
      "error",
      {
        "allowShortCircuit": true,
        "allowTernary": true,
        "allowTaggedTemplates": true
      }
    ],
    "prettier/prettier": [
      "error",
      {
        "trailingComma": "es5",
        "printWidth": 80,
        "jsxBracketSameLine": true,
        "number-leading-zero": null
      }
    ]
  }
}
